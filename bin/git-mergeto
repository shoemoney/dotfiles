#!/bin/sh -eu
# =============================================================================
# ðŸ”€ Git Branch Merge Utility ðŸ”€
# =============================================================================
# ðŸŒ¿ Simplifies merging the current branch into another branch
# ðŸ§¹ Automatically deletes the source branch after merging

BRANCH=$(git symbolic-ref HEAD 2>/dev/null | cut -d/ -f3)
if [ $# -eq 0 ]; then
    TO='master'
else
    TO="$1"
fi
git checkout "${TO}"
git merge "${BRANCH}"
git branch -d "${BRANCH}"
